<div class="wrapper">
  <h1>Log In</h1>
  <div class="row">
    <div class="container">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>

      <p>
        Want to comment? <%= link_to "Make an account!", signup_path %>
      </p>
    </div>
  </div>
</div>
