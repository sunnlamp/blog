<div class="row">
  <div class="col s12">
    <%= form_for(:post, url: posts_path) do |f| %>

      <% if @post.errors.any? %>
        <div id="errors">
          <h2><%= pluralize(@post.errors.count, "error") %> prevented
          this post from saving.</h2>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </div>
      <% end %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_field :body, as: :text, class: "materialize-textarea", id: "textarea1" %>

      <%= f.submit "Create Post", class: "btn" %>
    <% end %>
  </div>
</div>
